{
  "name": "@basictodo/utils",
  "version": "0.1.0",
  "description": "Shared utilities for BasicTodo",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@basictodo/db": "workspace:*",
    "@supabase/supabase-js": "^2.39.3",
    "zod": "^3.23.8",
    "resend": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./supabase": {
      "types": "./src/supabase.ts",
      "default": "./src/supabase.ts"
    },
    "./schema": {
      "types": "./src/schema.ts",
      "default": "./src/schema.ts"
    },
    "./ai": {
      "types": "./src/ai.ts",
      "default": "./src/ai.ts"
    },
    "./tasks": {
      "types": "./src/tasks.ts",
      "default": "./src/tasks.ts"
    },
    "./email": {
      "types": "./src/email.ts",
      "default": "./src/email.ts"
    }
  }
